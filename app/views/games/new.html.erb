<div class="container">
  <h1>New Game</h1>
  <div class="grid">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>
  <p>What is the longest word you can find?</p>
  <%= form_with url: score_game_path, method: :post, local: true, data: { turbo: false } do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(' ') %>
    <div class="input-group mb-3">
      <%= text_field_tag :word, nil, class: "form-control", placeholder: "Enter your word" %>
      <div class="input-group-append">
        <%= submit_tag "Play", class: "btn form-control" %>
      </div>
    </div>
  <% end %>
</div>
